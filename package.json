{
  "name": "prettier-setup",
  "license": "MIT",
  "devDependencies": {
    "eslint": "4.15.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.5.0",
    "husky": "0.14.3",
    "lint-staged": "6.0.1",
    "prettier": "1.10.2"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.{json,md,scss}": ["prettier --write", "git add"]
  },
  "scripts": {
    "fix:assets": "prettier --ignore-path .gitignore --write \"**/*.{json,md,scss}\"",
    "fix:code": "yarn test:code -- --fix",
    "fix": "yarn fix:code && yarn fix:assets",
    "precommit": "lint-staged",
    "test:code": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.js\"",
    "test": "yarn test:code"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lipis/prettier-setup"
  }
}
